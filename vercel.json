{
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          { "key": "Permissions-Policy", "value": "microphone=(self), speech-recognition=(self)" }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ]
  }  